<div class="container" id="main_post">
  <div class="row">
    <div class="col-md-6">
      <h3><%= @user.name %>さんのお気に入り一覧</h3>
      <h4>Artist:</h4>
      <% @a_favorites.each do |favorite| %>
        <p>user:<%= favorite.artist.name %></p>
        <%= image_tag favolite.user.avatar.url, size: "80x80" %>
        <%= link_to 'show', gallery_path(favorite.artist_id) %>
      <% end %>
      <h4>Gallery:</h4>
      <% @g_favorites.each do |favorite| %>
        <p>user:<%= favorite.gallery.name %></p>
        <%= image_tag favorite.user.avatar.url, size: "80x80" %>
        <%= link_to 'show', gallery_path(favorite.gallery_id) %>
      <% end %>
    </div>
  </div>
</div>
