<br><br>
<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <div class="login-form">
        <center><h2>Log in</h2></center>
        <p class="login-text">
          <span class="fa-stack fa-lg">
            <i class="fa fa-circle fa-stack-2x"></i>
            <i class="fa fa-lock fa-stack-1x"></i>
          </span>
        </p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-email", placeholder: "Email" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "current-password", class: "login-password", placeholder: "Password"  %>
          </div>
          <div class="actions">
            <%= f.submit "Log in" , class: "login-submit" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
