<br /><br />
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-4">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name%><br />
          <%= f.text_field :name, autofocus: true  %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :avatar %><br/>
          <%= f.file_field :avatar %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :gallery_owner %><br />
          <%= f.radio_button :gallery_owner, "true", for: "true" %>yes<br />
          <span class="btn btn-dark-moon btn-rounded btn-sm"><%= t('view.msg.if_you_do_not_check_this_box_you_will_be_registered_as_an_artist') %></span><br />
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
