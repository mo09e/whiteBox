<h2>Gallery List</h2>
<br>
<table class="task_row" id="main_table">
  <thead>
    <tr>
      <th class="t_head">avatar</th>
      <th class="t_head">name</th>
      <th class="t_head">rental_fee</th>
      <th class="t_head">lending_period</th>
      <th class="t_head">location</th>
      <th colspan="3" class="t_head"></th>
    </tr>
  </thead>
  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><%= image_tag gallery.user.avatar.url, size: "100x100" %></td>
        <td><%= link_to "#{gallery.name}", gallery_path(gallery) %></td>
        <td><%= gallery.rental_fee_i18n %></td>
        <td><%= gallery.lending_period_i18n %></td>
        <td>
          <% gallery.label.each do |label| %>
            <p  class="label label-info"><%= label.name %></p>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
