<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <div class="post-preview">
        <table class="artist_table" id="main_table">
        <br><br>
        <h1>Reservation</h1>
        <br>
        <p class="reservation_p"><%= fa_icon("television fa-lg", text: "Exhibition Title") %></p>
        <p><%= @reservation.title %></p>
        <p class="reservation_p"><%= fa_icon("calendar fa-lg", text: t('view.period_use')) %></p>
        <p><%= l @reservation.start_time, format: :day %>ã€€- <%= l @reservation.end_time, format: :day %></p>
        <p class="reservation_p"><%= fa_icon("user fa-lg", text: "Artist") %></p>
        <p><%= @reservation.artist.name %></p>
        <p class="reservation_p"><%= fa_icon("university fa-lg", text: "Artist") %></p>
        <p><%= @reservation.gallery.name %></p>
        <br><br>
        <% if @gallery.id == @reservation.gallery_id && @gallery.user_id == current_user.id %>
        <%= link_to 'Edit', edit_gallery_reservation_path(@reservation) %> |
        <% end %>
        <%= link_to "back", gallery_path(@gallery) %>
      </div>
    </div>
  </div>
</div>
